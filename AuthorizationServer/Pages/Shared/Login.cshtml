@model AuthorizationServer.Account.LoginViewModel

<div class="row justify-content-center">
    <div class="col-sm-6" style="max-width: 500px">
        <h1 class="text-center">Login</h1>
        @Html.Partial("_ValidationSummary")
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.ReturnUrl)
            <fieldset>
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input class="form-control" placeholder="Username" id="Username" name="Username" autofocus>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="password" class="form-control" placeholder="Password" id="Password" name="Password" autocomplete="off">
                </div>
                <br/>
                <div class="form-group d-grid gap-2">
                    <button class="btn btn-primary" name="button" value="login">Login</button>
                </div>
            </fieldset>
        }
        <br/>
        <h4>Request Details</h4>
        <div class="card" style="background: #f7f7f7">
            <div class="card-body">
                @if (Model.Parameters != null)
                {
                    @foreach (var key in Model.Parameters)
                    {
                        <li>
                            <strong>@key:</strong> @Model.Parameters[(string)key]
                        </li>
                    }
                }
            </div>
            
        </div>
    </div>
</div>